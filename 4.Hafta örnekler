static int HesapMakinasi(int number1, int number2)
      {
          int result, deger;
          Console.WriteLine("Yapacaginiz islemi seciniz Toplama= 1 , Cıkarma=2, Bölme=3, Çarpma= 4");
          result = int.Parse(Console.ReadLine());
          switch (result)
          {
              case 1:
                  deger = number1 + number2;
                  Console.WriteLine("Toplama islem sonucu= {0}", deger);
                  break;
              case 2:
                  deger = number1 - number2;
                  Console.WriteLine("Cikarma islem sonucu= {0}", deger);
                  break;
              case 3:
                  deger = number1 / number2;
                  Console.WriteLine("Bolme islem sonucu= {0}", deger);
                  break;
              case 4:
                  deger = number1 * number2;
                  Console.WriteLine("Bolme islem sonucu= {0}", deger);
                  break;
              default:
                  Console.WriteLine("Girilen deger yanlis");
                  break;
                  
          }

          return result;


      }
